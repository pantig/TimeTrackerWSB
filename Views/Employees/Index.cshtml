@model IEnumerable<TimeTrackerApp.Models.Employee>

@{
    ViewData["Title"] = "Pracownicy";
}

<div style="margin-top: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="margin: 0;">Pracownicy</h2>
            <p class="hint" style="margin-top: 0.5rem;">Zarządzaj pracownikami w systemie</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">+ Dodaj pracownika</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="background: rgba(16, 185, 129, 0.1); color: var(--success); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1rem;">
            @TempData["SuccessMessage"]
        </div>
    }

    <table>
        <thead>
            <tr>
                <th>Nazwisko i imię</th>
                <th>Email</th>
                <th>Stanowisko</th>
                <th>Departament</th>
                <th>Rola</th>
                <th>Status</th>
                <th style="text-align: center;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><strong>@employee.User.LastName @employee.User.FirstName</strong></td>
                    <td>@employee.User.Email</td>
                    <td>@employee.Position</td>
                    <td>@employee.Department</td>
                    <td>
                        @switch (employee.User.Role)
                        {
                            case TimeTrackerApp.Models.UserRole.Admin:
                                <span class="badge" style="background: rgba(239, 68, 68, 0.1); color: var(--danger);">Administrator</span>
                                break;
                            case TimeTrackerApp.Models.UserRole.Manager:
                                <span class="badge" style="background: rgba(59, 130, 246, 0.1); color: var(--accent);">Kierownik</span>
                                break;
                            default:
                                <span class="badge" style="background: rgba(163, 163, 163, 0.1); color: var(--text-tertiary);">Pracownik</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (employee.IsActive)
                        {
                            <span class="badge badge-success">Aktywny</span>
                        }
                        else
                        {
                            <span class="badge" style="background: rgba(163, 163, 163, 0.1); color: var(--text-tertiary);">Nieaktywny</span>
                        }
                    </td>
                    <td style="text-align: center;">
                        <div style="display: flex; gap: 0.5rem; justify-content: center;">
                            <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Szczegóły</a>
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Edytuj</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 3rem; color: var(--text-tertiary);">
            <p>Brak pracowników w systemie.</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: 1rem;">Dodaj pierwszego pracownika</a>
        </div>
    }
</div>
