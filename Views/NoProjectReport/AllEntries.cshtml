@model TimeTrackerApp.Models.ViewModels.NoProjectEntriesViewModel

@{
    ViewData["Title"] = "Wszystkie wpisy bez projektu";
}

<div style="margin-top: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="margin: 0;">⚠️ Wpisy bez projektu - widok kierownika</h2>
            <p class="hint" style="margin-top: 0.5rem;">Pomóż pracownikom uzupełnić brakujące projekty</p>
        </div>
    </div>

    <div style="margin-bottom: 1.5rem;">
        <label style="font-weight: 600; display: block; margin-bottom: 0.5rem;">Filtruj po pracowniku:</label>
        <select onchange="filterByEmployee(this.value)" class="form-control" style="max-width: 300px;">
            <option value="">Wszyscy pracownicy</option>
            @foreach (var emp in Model.AllEmployees)
            {
                <option value="@emp.Id" selected="@(Model.SelectedEmployeeId == emp.Id)">@emp.User.FirstName @emp.User.LastName</option>
            }
        </select>
    </div>

    @if (Model.TotalHours > 0)
    {
        <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
            <div class="stat-box" style="flex: 1; padding: 1rem; background: rgba(234, 179, 8, 0.1); border-left: 3px solid #eab308; border-radius: 8px;">
                <div style="font-size: 0.875rem; color: var(--text-secondary); margin-bottom: 0.25rem;">Razem godzin</div>
                <div style="font-size: 1.5rem; font-weight: 600; color: #eab308;">@Model.TotalHours.ToString("0.0")h</div>
            </div>
            <div class="stat-box" style="flex: 1; padding: 1rem; background: rgba(234, 179, 8, 0.1); border-left: 3px solid #eab308; border-radius: 8px;">
                <div style="font-size: 0.875rem; color: var(--text-secondary); margin-bottom: 0.25rem;">Liczba wpisów</div>
                <div style="font-size: 1.5rem; font-weight: 600; color: #eab308;">@Model.Entries.Count</div>
            </div>
            <div class="stat-box" style="flex: 1; padding: 1rem; background: rgba(234, 179, 8, 0.1); border-left: 3px solid #eab308; border-radius: 8px;">
                <div style="font-size: 0.875rem; color: var(--text-secondary); margin-bottom: 0.25rem;">Pracowników</div>
                <div style="font-size: 1.5rem; font-weight: 600; color: #eab308;">@Model.Entries.Select(e => e.EmployeeId).Distinct().Count()</div>
            </div>
        </div>
    }

    @if (Model.Entries.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Pracownik</th>
                    <th>Data</th>
                    <th>Czas</th>
                    <th>Godziny</th>
                    <th>Opis</th>
                    <th>Projekt</th>
                    <th style="text-align: center;">Akcja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.Entries)
                {
                    <tr class="no-project-entry-row">
                        <td><strong>@entry.Employee.User.FirstName @entry.Employee.User.LastName</strong></td>
                        <td>@entry.EntryDate.ToString("yyyy-MM-dd")</td>
                        <td>@entry.StartTime.ToString(@"hh\:mm") – @entry.EndTime.ToString(@"hh\:mm")</td>
                        <td><strong>@entry.TotalHours.ToString("0.0")h</strong></td>
                        <td>@(entry.Description ?? "—")</td>
                        <td>
                            <select class="project-select" data-entry-id="@entry.Id" style="width: 100%; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;">
                                <option value="">(wybierz projekt)</option>
                                @foreach (var project in Model.AvailableProjects)
                                {
                                    <option value="@project.Id">@project.Name</option>
                                }
                            </select>
                        </td>
                        <td style="text-align: center;">
                            <button class="btn btn-primary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;" onclick="assignProject(@entry.Id)">Przypisz</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div style="text-align: center; padding: 3rem; color: var(--text-tertiary); background: rgba(34, 197, 94, 0.05); border-radius: 8px; border: 1px solid rgba(34, 197, 94, 0.2);">
            <p style="font-size: 1.25rem; margin-bottom: 0.5rem;">✅ Świetnie!</p>
            <p>Wszystkie wpisy mają przypisane projekty.</p>
        </div>
    }
</div>

<script>
function filterByEmployee(employeeId) {
    const url = new URL(window.location);
    if (employeeId) {
        url.searchParams.set('employeeId', employeeId);
    } else {
        url.searchParams.delete('employeeId');
    }
    window.location = url;
}

function assignProject(entryId) {
    const selectEl = document.querySelector(`select[data-entry-id="${entryId}"]`);
    const projectId = selectEl.value;
    
    if (!projectId) {
        alert('Wybierz projekt');
        return;
    }
    
    fetch('@Url.Action("AssignProject", "NoProjectReport")', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ entryId: entryId, projectId: parseInt(projectId) })
    })
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            location.reload();
        } else {
            alert(result.message || 'Błąd przypisywania projektu');
        }
    });
}
</script>
