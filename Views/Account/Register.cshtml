@using TimeTrackerApp.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="auth-container">
    <div class="auth-card">
        <h1>Rejestracja</h1>
        
        <form method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="error-summary"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">Imię</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Potwierdź hasło</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zarejestruj się</button>
        </form>

        <p class="auth-link">
            Masz już konto? <a href="/Account/Login">Zaloguj się</a>
        </p>
    </div>
</div>
