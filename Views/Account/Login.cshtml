@using TimeTrackerApp.Models.ViewModels
@model LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Logowanie";
}

<div class="auth-container">
    <div class="auth-card">
        <h1>Logowanie</h1>
        
