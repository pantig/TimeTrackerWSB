            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">HasÅ‚o</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="RememberMe" type="checkbox" />
                    PamiÄ™taj mnie
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </form>

        <p class="auth-link">
            Nie masz konta? <a asp-action="Register">Zarejestruj siÄ™</a>
        </p>

