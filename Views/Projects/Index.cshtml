@model IEnumerable<TimeTrackerApp.Models.Project>

@{
    ViewData["Title"] = "Projekty";
}

<div style="margin-top: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="margin: 0;">Projekty</h2>
            <p class="hint" style="margin-top: 0.5rem;">ZarzƒÖdzanie projektami i przypisaniem pracownik√≥w</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">+ Nowy projekt</a>
    </div>

    <!-- ‚úÖ ADDED: Formularz filtrowania -->
    <div style="background: var(--background-secondary); padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem;">
        <form method="get" asp-action="Index">
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 1rem; align-items: end;">
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Nazwa projektu</label>
                    <input type="text" name="searchName" value="@ViewBag.SearchName" placeholder="Szukaj..." style="width: 100%; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;" />
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Opiekun</label>
                    <select name="managerId" style="width: 100%; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;">
                        <option value="">Wszyscy</option>
                        @foreach (var manager in (List<TimeTrackerApp.Models.Employee>)ViewBag.Managers)
                        {
                            <option value="@manager.Id" selected="@(ViewBag.ManagerId == manager.Id ? "selected" : null)">
                                @manager.User.FirstName @manager.User.LastName
                            </option>
                        }
                    </select>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Status</label>
                    <select name="status" style="width: 100%; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;">
                        <option value="">Wszystkie</option>
                        <option value="@((int)TimeTrackerApp.Models.ProjectStatus.Active)" selected="@(ViewBag.Status == TimeTrackerApp.Models.ProjectStatus.Active ? "selected" : null)">Aktywny</option>
                        <option value="@((int)TimeTrackerApp.Models.ProjectStatus.Planning)" selected="@(ViewBag.Status == TimeTrackerApp.Models.ProjectStatus.Planning ? "selected" : null)">Planowanie</option>
                        <option value="@((int)TimeTrackerApp.Models.ProjectStatus.OnHold)" selected="@(ViewBag.Status == TimeTrackerApp.Models.ProjectStatus.OnHold ? "selected" : null)">Wstrzymany</option>
                        <option value="@((int)TimeTrackerApp.Models.ProjectStatus.Completed)" selected="@(ViewBag.Status == TimeTrackerApp.Models.ProjectStatus.Completed ? "selected" : null)">Zako≈Ñczony</option>
                    </select>
                </div>
                <div style="display: flex; gap: 0.5rem;">
                    <button type="submit" class="btn btn-primary">üîç Filtruj</button>
                    <a asp-action="Index" class="btn btn-secondary">‚úñÔ∏è Wyczy≈õƒá</a>
                </div>
            </div>
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opiekun</th>
                <th>Status</th>
                <th>Data rozpoczƒôcia</th>
                <th style="text-align: right;">Bud≈ºet godzinowy</th>
                <th style="text-align: right;">Wykorzystano</th>
                <th style="text-align: center;">Pracownicy</th>
                <th style="text-align: center;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                var totalHours = project.TimeEntries.Sum(te => te.TotalHours);
                var isOverBudget = project.HoursBudget.HasValue && totalHours > project.HoursBudget.Value;
                var rowStyle = isOverBudget ? "border-left: 3px solid var(--danger); background: rgba(239, 68, 68, 0.05);" : "";

                <tr style="@Html.Raw(rowStyle)">
                    <td>
                        <strong>@project.Name</strong>
                        @if (isOverBudget)
                        {
                            <span style="color: var(--danger); font-size: 0.875rem; margin-left: 0.5rem;">‚ö†Ô∏è Przekroczono</span>
                        }
                        @if (!string.IsNullOrEmpty(project.Description))
                        {
                            <div style="color: var(--text-secondary); font-size: 0.875rem; margin-top: 0.25rem;">@project.Description</div>
                        }
                    </td>
                    <td>
                        @if (project.Manager != null && project.Manager.User != null)
                        {
                            <span>@project.Manager.User.FirstName @project.Manager.User.LastName</span>
                            <div style="color: var(--text-tertiary); font-size: 0.875rem;">@project.Manager.Position</div>
                        }
                        else
                        {
                            <span style="color: var(--text-tertiary);">Brak opiekuna</span>
                        }
                    </td>
                    <td>
                        @switch (project.Status)
                        {
                            case TimeTrackerApp.Models.ProjectStatus.Active:
                                <span class="badge badge-success">Aktywny</span>
                                break;
                            case TimeTrackerApp.Models.ProjectStatus.Planning:
                                <span class="badge badge-warning">Planowanie</span>
                                break;
                            case TimeTrackerApp.Models.ProjectStatus.OnHold:
                                <span class="badge badge-secondary">Wstrzymany</span>
                                break;
                            case TimeTrackerApp.Models.ProjectStatus.Completed:
                                <span class="badge badge-success">Zako≈Ñczony</span>
                                break;
                        }
                    </td>
                    <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                    <td style="text-align: right;">
                        @if (project.HoursBudget.HasValue)
                        {
                            <span>@project.HoursBudget.Value.ToString("0.0")h</span>
                        }
                        else
                        {
                            <span style="color: var(--text-tertiary);">-</span>
                        }
                    </td>
                    <td style="text-align: right; font-weight: 600;">
                        @if (project.HoursBudget.HasValue)
                        {
                            var percent = (totalHours / project.HoursBudget.Value) * 100;
                            var color = isOverBudget ? "var(--danger)" : (percent > 80 ? "var(--warning)" : "var(--success)");
                            <span style="color: @color;">@totalHours.ToString("0.0")h (@percent.ToString("0.0")%)</span>
                        }
                        else
                        {
                            <span>@totalHours.ToString("0.0")h</span>
                        }
                    </td>
                    <td style="text-align: center;">
                        <span class="badge badge-secondary">@project.Employees.Count</span>
                    </td>
                    <td style="text-align: center;">
                        <div style="display: flex; gap: 0.5rem; justify-content: center;">
                            <a asp-action="Report" asp-route-id="@project.Id" class="btn btn-primary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">üìà Raport</a>
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Usu≈Ñ</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 3rem; color: var(--text-tertiary);">
            <p>Brak projekt√≥w.</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: 1rem;">Utw√≥rz pierwszy projekt</a>
        </div>
    }
</div>
