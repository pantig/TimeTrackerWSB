        font-size: 0.875rem;
        font-weight: 600;
    }

    .badge-success {
        background: rgba(34, 197, 94, 0.1);
        color: #22c55e;
    }

    .badge-info {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
    }

    .badge-warning {
        background: rgba(234, 179, 8, 0.1);
        color: #eab308;
    }

    .badge-secondary {
        background: rgba(148, 163, 184, 0.1);
        color: #94a3b8;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: var(--text-secondary);
    }

    .empty-state p {
        font-size: 1.125rem;
        margin: 0;
    }

    .text-muted {
        color: var(--text-tertiary);
    }
</style>
