@model TimeTrackerApp.Models.Project

@{
    ViewData["Title"] = "Nowy projekt";
    var allEmployees = ViewBag.Employees as List<TimeTrackerApp.Models.Employee>;
    var managers = ViewBag.Managers as List<TimeTrackerApp.Models.Employee>;
    var clients = ViewBag.Clients as List<TimeTrackerApp.Models.Client>;
}

<div style="margin-top: 2rem;">
    <h2>Nowy projekt</h2>

    <form method="post" asp-action="Create" class="card">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Nazwa projektu *</label>
            <input asp-for="Name" class="form-control" placeholder="Nazwa projektu" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Opis</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Opis projektu"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ✅ FIXED: Dodanie pola wyboru klienta -->
        <div class="form-group">
            <label asp-for="ClientId">Klient *</label>
            <select asp-for="ClientId" class="form-control" required>
                <option value="">-- Wybierz klienta --</option>
                @if (clients != null && clients.Any())
                {
                    @foreach (var client in clients)
                    {
                        <option value="@client.Id">@client.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ManagerId">Opiekun projektu (Kierownik) *</label>
            <select asp-for="ManagerId" class="form-control" required>
                <option value="">-- Wybierz kierownika --</option>
                @if (managers != null && managers.Any())
                {
                    @foreach (var manager in managers)
                    {
                        <option value="@manager.Id">@manager.User.FirstName @manager.User.LastName (@manager.Position)</option>
                    }
                }
            </select>
            <span asp-validation-for="ManagerId" class="text-danger"></span>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div class="form-group">
                <label asp-for="Status">Status *</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Planowanie</option>
                    <option value="1" selected>Aktywny</option>
                    <option value="2">Wstrzymany</option>
                    <option value="3">Zakończony</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoursBudget">Budżet godzinowy (opcjonalnie)</label>
                <input asp-for="HoursBudget" type="number" step="0.1" class="form-control" placeholder="np. 160" />
                <span asp-validation-for="HoursBudget" class="text-danger"></span>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
            <div class="form-group">
                <label asp-for="StartDate">Data rozpoczęcia *</label>
                <input asp-for="StartDate" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate">Data zakończenia (opcjonalnie)</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Przypisani pracownicy</label>
            <div style="max-height: 200px; overflow-y: auto; border: 1px solid var(--border); border-radius: 4px; padding: 0.75rem;">
                @if (allEmployees != null && allEmployees.Any())
                {
                    @foreach (var employee in allEmployees)
                    {
                        <div style="margin-bottom: 0.5rem;">
                            <label style="display: flex; align-items: center; cursor: pointer;">
                                <input type="checkbox" name="selectedEmployees" value="@employee.Id" style="margin-right: 0.5rem;" />
                                <span>@employee.User.FirstName @employee.User.LastName (@employee.Position)</span>
                            </label>
                        </div>
                    }
                }
                else
                {
                    <p style="color: var(--text-tertiary); margin: 0;">Brak dostępnych pracowników</p>
                }
            </div>
        </div>

        <div class="form-group">
            <label>
                <input asp-for="IsActive" type="checkbox" checked style="margin-right: 0.5rem;" />
                Projekt aktywny
            </label>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
            <button type="submit" class="btn btn-primary">Utwórz projekt</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
